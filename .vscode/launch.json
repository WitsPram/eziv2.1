{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Jest Tests",
            "program": "${workspaceFolder}/backend/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--config",
                "${workspaceFolder}/backend/jest.config.js"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "runtimeArgs": [
                "--inspect-brk"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}
